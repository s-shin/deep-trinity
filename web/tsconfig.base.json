{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "templates/**/*"
  ]
}
